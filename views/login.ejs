<div>
  <%if (messages.error)  { %>
  <div class="alert alert-danger"><%=messages.error %></div>
  <% } %>
  <h1><%=title %></h1>
  <form method="post" class="form-signin" ng-submit="login()">
    <input type="text" name="username" class="form-control" placeholder="username" ng-model="login.username">
    <input type="password" name="password" class="form-control" placeholder="password" ng-model="login.password">
    <input type="submit" value="login" class="btn btn-lg btn-primary btn-block">
    <a href="">Forgot password?</a>
  </form>
</div>

